<div class="form wrapper">
  <h1 class="title">ログイン</h1>
  <div class="form_post">
    
      <div class="field">
        <%= f.label :"メールアドレス" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"パスワード" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class: "text_field" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :"ログイン状態を維持" %>
        </div>
      <% end %>
      <%= f.submit "ログイン", class: "button" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>