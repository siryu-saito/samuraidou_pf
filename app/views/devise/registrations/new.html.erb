<div class="form wrapper">
  <h1 class="form_title">新規登録</h1>
  <div class="form_post">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :"ユーザー名" %><br />
          <%= f.text_field :user_name, autofocus: true, class: "text_field" %>
          <p>※ユーザー名は他のユーザーも確認する事が出来ます</p>
        </div>

        <div class="field">
          <%= f.label :"姓" %> / <%= f.label :"名" %><br />
          <%= f.text_field :last_name, autofocus: true, class: "text_field" %> <%= f.text_field :first_name, autofocus:true, class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :"セイ" %> / <%= f.label :"メイ" %><br />
          <%= f.text_field :last_name_kana, autofocus: true, class: "text_field" %> <%= f.text_field :first_name_kana, autofocus:true, class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :"住所" %><br />
          <%= f.select :prefectures, User.prefectures.keys, {}, class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード（確認）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text_field" %>
        </div>
        <%= f.submit "登録する", class: "button" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
</div>






