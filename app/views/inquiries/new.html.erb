<div class="form wrapper">
  <%= form_with model: @inquiry, local: true, url: confirm_inquiries_path do |f| %>
    <h1 class="title">お問い合わせフォーム</h1>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form_post">
      <div class="field">
        <%= f.label :name, 'お名前' %><br>
        <%= f.text_field :name, autofocus: true, placeholder:'侍道 太郎', class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :email, 'メールアドレス' %><br>
        <%= f.text_field :email, placeholder:'test@test.com', class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :message, 'お問い合わせ内容' %><br>
        <%= f.text_area :message, placeholder:'お問い合わせ内容は10文字以上でお願いします', class: "text_area" %>
      </div>
      <%= f.submit '確認画面へ進む', class: "button" %>
    </div>
  <% end %>
</div>