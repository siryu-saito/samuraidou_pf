<h2>お問い合わせフォーム</h2>
<%= form_with model: @inquiry, local: true, url: confirm_inquiries_path do |f| %>
  <div>
    <%= f.label :name, 'お名前' %><br>
    <%= f.text_field :name, autofocus: true, placeholder:'侍道 太郎' %>
  </div>
  <div>
    <%= f.label :email, 'メールアドレス' %><br>
    <%= f.text_field :email, placeholder:'test@test.com' %>
  </div>
  <div>
    <%= f.label :message, 'お問い合わせ内容' %><br>
    <%= f.text_area :message, placeholder:'お問い合わせ内容は10文字以上でお願いします' %>
  </div>
  <div>
    <%= f.submit '確認画面へ進む' %>
  </div>
<% end %>