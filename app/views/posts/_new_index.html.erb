<div class="newPost_index_box ">
  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <div class="box_items">
        <% if post.post_images.present? %>
          <% post.post_images.first(1).each do |image| %>
            <%= attachment_image_tag image, :image, :fill, 300, 300 %>
          <% end %>
        <% else %>
          <%= image_tag 'no_image.jpg', width: '300', height: '300' %>
        <% end %>
        <p><%= post.title %></p>
      </div>
    <% end %>
  <% end %>
</div>
<%= paginate @posts, remote: true %>