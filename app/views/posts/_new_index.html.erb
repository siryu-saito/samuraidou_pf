<div class="newPost_index_box">
  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <div class="box_items">
        <% if post.post_images.present? %>
          <% post.post_images.first(1).each do |image| %>
            <%= attachment_image_tag image, :image, :fill, 250, 250 %>
          <% end %>
        <% else %>
          <%= image_tag 'no_image.jpg', width: '250', height: '250' %>
        <% end %>
        <div class="box_items_information">
          <p class="post_title"><%= post.title %></p>
          <p class="created_at"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
          <div class="box_items_information_user">
            <%= attachment_image_tag post.user, :profile_image, class: "profile_image", fallback: "no_image.jpg", size:'50x50' %>
            <p class="user_name"><%= post.user.user_name %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<%= paginate @posts, remote: true %>