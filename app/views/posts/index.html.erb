<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <h4>投稿者</h4>
  <%= post.user.user_name %>
  <h4>タイトル</h4>
  <%= post.title %>
  <h4>場所</h4>
  <%= post.address %>
  <h4>感想</h4>
  <%= post.text %>
  <h4>画像</h4>
  <% if post.post_images.present? %>
    <% post.post_images.each do |image| %>
      <%= attachment_image_tag image, :image, :fill, 200, 200 %>
    <% end %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: '200×200' %>
  <% end %>
  <div id="post_<%= post.id %>">
    <%= render 'post', post: post %>
  </div>
  <td><%= link_to '詳細', post %></td>
  <td><%= link_to '編集', edit_post_path(post) %></td>
<% end %>