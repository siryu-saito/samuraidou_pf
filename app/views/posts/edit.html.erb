<h1>編集画面</h1>

<%= form_with model:@post, url: post_path, local:true do |f|%>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>場所</h4>
  <%= f.text_field :address %>
  <h4>感想</h4>
  <%= f.text_field :text %>
  <%= f.attachment_field :post_images_images, multiple: true %>

  <%= f.submit '訂正' %>
<% end %>

<%= link_to "詳細", post_path %>
<%= link_to "削除", post_path, method: :delete, data: { confirm: 'Are you sure?' } %>